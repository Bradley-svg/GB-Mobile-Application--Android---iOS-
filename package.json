{
  "name": "greenbro-monorepo",
  "private": true,
  "version": "0.8.0",
  "scripts": {
    "dev:backend": "cd backend && npm run dev",
    "dev:mobile": "cd mobile && npm run start:devclient",
    "dev:all": "powershell -ExecutionPolicy Bypass -File ./scripts/dev-all.ps1",
    "stop:all": "powershell -ExecutionPolicy Bypass -File ./scripts/stop-all.ps1",
    "lint": "npm run lint:backend && npm run lint:mobile",
    "lint:backend": "cd backend && npm run lint",
    "lint:mobile": "cd mobile && npm run lint",
    "typecheck": "npm run typecheck:backend && npm run typecheck:mobile",
    "typecheck:backend": "cd backend && npm run typecheck",
    "typecheck:mobile": "cd mobile && npm run typecheck",
    "test": "npm run test:backend && npm run test:mobile",
    "test:backend": "cd backend && npm test",
    "test:mobile": "cd mobile && npm test",
    "e2e:android": "cd mobile && npm run e2e:test:android",
    "release:check": "npm run lint && npm run typecheck && npm test && npm run e2e:android",
    "release:tag": "node scripts/create-release-tag.js",
    "web:dev": "cd web && next dev",
    "web:build": "cd web && next build",
    "web:start": "cd web && next start",
    "web:build:prod": "cd web && NEXT_PUBLIC_API_URL=https://staging.api.greenbro.co.za NEXT_PUBLIC_EMBEDDED=true next build",
    "web:test": "cd web && npm test",
    "web:test:coverage": "cd web && npm run test:coverage",
    "web:e2e": "cd web && npm run e2e",
    "demo:seed": "cd backend && npm run seed:demo",
    "demo:reset": "cd backend && npm run seed:demo -- --reset",
    "backend:health:staging": "cd backend && npm run health:staging",
    "web:e2e:staging": "cd web && WEB_E2E_BASE_URL=https://staging.app.greenbro.co.za npm run e2e",
    "staging:smoke": "npm run backend:health:staging && npm run web:e2e:staging"
  }
}
