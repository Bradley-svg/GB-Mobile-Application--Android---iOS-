{
  "name": "greenbro-backend",
  "version": "1.0.0",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:mqtt": "ts-node-dev --respawn --transpile-only src/workers/mqttIngest.ts",
    "dev:alerts": "ts-node-dev --respawn --transpile-only src/workers/alertsWorker.ts",
    "script:backfill-snapshots": "ts-node-dev --transpile-only src/scripts/backfillDeviceSnapshots.ts",
    "script:debug:heat-pump-history": "ts-node-dev --transpile-only src/scripts/debugHeatPumpHistory.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "migrate": "node-pg-migrate up -m ./migrations -d DATABASE_URL",
    "migrate:test": "node-pg-migrate up -m ./migrations -d TEST_DATABASE_URL",
    "migrate:dev": "node-pg-migrate up -m ./migrations -d DATABASE_URL",
    "staging:bootstrap": "ts-node scripts/bootstrap-staging.ts",
    "staging:bootstrap:raw": "cross-env DATABASE_URL=$STAGING_DATABASE_URL npm run migrate:dev && cross-env DATABASE_URL=$STAGING_DATABASE_URL node scripts/init-local-db.js",
    "health:check": "ts-node scripts/check-health.ts"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "expo-server-sdk": "^4.0.0",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "jsonwebtoken": "^9.0.3",
    "mqtt": "^5.10.0",
    "pg": "^8.11.5",
    "pino": "^9.4.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^22.0.0",
    "@types/pg": "^8.11.10",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "cross-env": "^7.0.3",
    "@vitest/coverage-v8": "^2.1.4",
    "eslint": "^8.57.1",
    "node-pg-migrate": "^7.6.1",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3",
    "vitest": "^2.1.4"
  }
}
