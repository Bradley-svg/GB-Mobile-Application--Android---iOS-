{
  "name": "greenbro-backend",
  "version": "0.8.0",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:mqtt": "ts-node-dev --respawn --transpile-only src/workers/mqttIngest.ts",
    "dev:alerts": "ts-node-dev --respawn --transpile-only src/workers/alertsWorker.ts",
    "script:backfill-snapshots": "ts-node-dev --transpile-only src/scripts/backfillDeviceSnapshots.ts",
    "script:debug:heat-pump-history": "ts-node-dev --transpile-only src/scripts/debugHeatPumpHistory.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts --max-warnings=0",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:av": "cross-env AV_SCANNER_ENABLED=true AV_SCANNER_CMD=\"node ./test/fixtures/av-sim.js\" vitest run test/virusScanner.test.ts",
    "test:watch": "vitest watch",
    "migrate": "node scripts/run-migrations.js",
    "migrate:test": "cross-env NODE_ENV=test node scripts/run-migrations.js",
    "migrate:dev": "node scripts/run-migrations.js",
    "seed:demo": "ts-node --transpile-only scripts/seed-demo.ts",
    "seed:e2e": "ts-node --transpile-only scripts/seed-demo.ts --reset",
    "staging:bootstrap": "ts-node scripts/bootstrap-staging.ts",
    "staging:bootstrap:raw": "cross-env DATABASE_URL=$STAGING_DATABASE_URL npm run migrate:dev && cross-env DATABASE_URL=$STAGING_DATABASE_URL ts-node --transpile-only scripts/seed-demo.ts --reset",
    "health:check": "ts-node scripts/check-health.ts",
    "health:check-plus": "ts-node scripts/check-health-plus.ts",
    "health:staging": "ts-node scripts/check-health-plus-staging.ts",
    "history:vendor:check": "node scripts/check-vendor-history.js",
    "history:vendor:check:6h": "node scripts/check-vendor-history.js --hours 6 --field metric_compCurrentA"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "otplib": "^12.0.1",
    "expo-server-sdk": "^4.0.0",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "jsonwebtoken": "^9.0.3",
    "multer": "^1.4.5-lts.1",
    "mqtt": "^5.10.0",
    "pg": "^8.11.5",
    "pino": "^9.4.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^22.0.0",
    "@types/pg": "^8.11.10",
    "@types/multer": "^1.4.12",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "cross-env": "^7.0.3",
    "@vitest/coverage-v8": "^2.1.4",
    "eslint": "^8.57.1",
    "node-pg-migrate": "^7.6.1",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3",
    "vitest": "^2.1.4"
  }
}
